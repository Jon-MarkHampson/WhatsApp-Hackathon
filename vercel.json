{
    "version": 2,
    "builds": [
        {
            "src": "website/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "website/static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "website/static/$1",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "website/app.py"
        }
    ],
    "functions": {
        "api/*.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 